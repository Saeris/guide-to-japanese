---
import ThemeSwitcher from "./ThemeSwitcher.astro";
---

<style is:global>
  header {
    grid-column: 1 / -1;
    grid-row: 1 / 2;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 4rem 2rem 2rem;
    gap: 0.25rem;

    h1 {
      margin: unset;
      font-size: var(--hs);
    }

    nav {
      display: flex;
      align-items: center;
      gap: 12px;

      ul {
        display: flex;
        width: stretch;
        margin: unset;
        padding: unset;
        list-style: none;

        li {
          --outline: transparent;
          --shadow: transparent;
          --text: var(--cn-700);

          border-radius: 4px;
          border: 1px solid var(--outline);
          padding-block: 2px;
          padding-inline: 4px;
          text-wrap: balance;
          box-shadow: 0 0 0 1.5px var(--shadow);

          &:hover {
            --text: var(--cn-900);
          }

          &:has(a.active) {
            --text: var(--cp-700);
          }

          &:focus-within {
            --outline: var(--cp-500);
            --shadow: var(--cp-a200);
          }

          a {
            display: block;
            width: stretch;
            color: var(--text);
            font-size: var(--ll);
            text-decoration: none;

            &:visited {
              color: var(--text);
            }

            &:focus-visible {
              outline: none;
            }
          }
        }
      }
    }
  }
</style>

<header>
  <h1><a href="/">Guide to Japanese</a></h1>
  <nav>
    <ul>
      <li>
        <a href="/learn/grammar">Grammar Guide</a>
      </li>
    </ul>
    <ThemeSwitcher />
  </nav>
</header>
